@model IEnumerable<GeekSeatWitchSaga.Models.Villager>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create">[Create New]</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeOfDeath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearOfDeath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearKilled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberKilled)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeOfDeath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfDeath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearKilled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberKilled)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
@if (ViewBag.Message != null)
{
    <h3 class="border-bottom mt-3">Average : @ViewBag.Message</h3>
}

